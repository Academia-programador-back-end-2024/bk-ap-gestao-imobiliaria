@model IEnumerable<ImovelViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Imoveis</h1>

<p>
    <a asp-action="Create">Adicionar Novo</a>
</p>

@* <div class="row row-cols-1 row-cols-md-3 g-4"> *@
<div class="card-group">
@foreach (var item in Model)
{
    <div class="card" style="width: 18rem;">
        <img src="@item.FotoDeCapa" class="card-img-top" style="max-height:144px; max-width:144px;">
        <div class="card-body">
            <h5 class="card-title">@item.Titulo</h5>

            <ul class="card-text">
                <li>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </li>
                <li>
                    @Html.DisplayFor(modelItem => item.Area)
                </li>
                <li>
                    @Html.DisplayFor(modelItem => item.Valor)
                </li>
                <li>
                    @Html.DisplayFor(modelItem => item.Negocio)
                </li>
                <li>
                    @Html.DisplayFor(modelItem => item.Disponivel)
                </li>
            </ul>
            
            <a class="btn btn-group  btn-primary" asp-action="Edit" asp-route-id="@item.ImovelId">Editar</a> |
            <a class="btn btn-group btn-secondary" asp-action="Details" asp-route-id="@item.ImovelId">Detalhes</a> |
            <a class="btn btn-group btn-warning" asp-action="Delete" asp-route-id="@item.ImovelId">Remover</a>
        </div>
    </div>
}
</div>
