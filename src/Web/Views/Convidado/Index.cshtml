@model IEnumerable<ImovelViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Bem vindo a imobiliaria John Wick</h1>
<br />
<h4>
    Confira algum dos nossos imoveis disponiveis.
</h4>
<br />
<div class="card-group">
    @foreach (var item in Model)
    {
        <div class="card" style="max-width:400px;">
            <img src="@item.FotoDeCapa" class="card-img-top" style="max-height:144px; max-width:144px;">
            <div class="card-body">
                <h5 class="card-title">@item.Titulo</h5>

                <ul class="card-text">
                    <li>
                        Endereço: @Html.DisplayFor(modelItem => item.Endereco)
                    </li>
                    <li>
                        Area:  @Html.DisplayFor(modelItem => item.Area)
                    </li>
                    <li>
                        Valor:  @Html.DisplayFor(modelItem => item.Valor)
                    </li>
                    <li>
                        Tipo de negocio:  @Html.DisplayFor(modelItem => item.Negocio)
                    </li>
                    <li>
                        Disponivel:  @Html.DisplayFor(modelItem => item.Disponivel)
                    </li>
                </ul>
            </div>
        </div>
    }
</div>

<br />
<br />
<h4>
    Entre em contato aqui para poder saber mais sobre o que temos a oferecer
</h4>
<br />

<form method="post" asp-action="Contato" style="max-width:600px;">
    <div class="form-group">
        <label id="nome" nome="nome" class="control-label">Nome</label>
        <input id="nome" nome="nome" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label id="email" nome="email" class="control-label">Email</label>
        <input id="email" nome="email" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label id="telefone" nome="telefone" class="control-label">Telefone</label>
        <input id="telefone" nome="telefone" type="text" class="form-control" />
    </div>
    <br />
    <input type="submit" value="Contato" class="btn btn-danger" />
</form>
